<div class="postzoom">
	<h2 class="title"><%= @post.title %></h2>
	<p class="meta"><small><%= @post.linked_tags %></small></p>
	<p class="meta"><%= @post.created_at.strftime("%d %b %Y at %H:%M") %></p>
	<div class="entry">
		<%= @post.body_html %>
	</div>
	<% if admin? %>
		<div class="edit"><a href="<%= @post.url %>edit">edit</a></div>
	<% end %>
</div>

<% if Blog.add_this %>
<!-- AddThis Button BEGIN -->
<a class="addthis_button" href="http://www.addthis.com/bookmark.php?v=250&amp;username=<%= Blog.add_this %>"><img src="http://s7.addthis.com/static/btn/v2/lg-share-en.gif" width="125" height="16" alt="Bookmark and Share" style="border:0"/></a><script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#username=<%= Blog.add_this %>"></script>
<!-- AddThis Button END -->
<% end %>

<% if Blog.disqus_shortname %>
	<div id="disqus_thread"></div><script type="text/javascript" src="http://disqus.com/forums/<%= Blog.disqus_shortname %>/embed.js"></script><noscript><a href="http://<%= Blog.disqus_shortname %>.disqus.com/?url=ref">View the discussion thread.</a></noscript><a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
<% end %>

